<%= form_for(@auto_message) do |f| %>
  <% if @auto_message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@auto_message.errors.count, "error") %> prohibited this auto_message from being saved:</h2>

      <ul>
      <% @auto_message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field hidden">
    <%= f.label :message_type,'消息类型:' %>
    <%= f.select :message_type, select_message_type, class:'form-control'%>
  </div>

  <div class="field">
    <%= f.label :keyword,'关键字' %>
    <%= f.text_field :keyword %>
  </div>

  <div class="field">
    <%= f.label :content,'消息内容' %>
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit '创建',class:'t-btn-default' %>
  </div>
<% end %>
